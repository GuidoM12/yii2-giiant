{
    "require": {
        "wikimedia/composer-merge-plugin": "~1.4"
    },
    "autoload-dev": {
        "\\schmunk42\\giiant": "/repo/src"
    },
    "extra": {
        "bootstrap": "schmunk42\\giiant\\Bootstrap",
        "merge-plugin": {
            "require": [
                "/app/composer.json",
                "/repo/composer.json"
            ]
        }
    },
    "config": {
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)",
            "optimize-with-installed-packages": false
        }
    }
}
